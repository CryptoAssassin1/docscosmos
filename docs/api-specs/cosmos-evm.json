{
  "openapi": "3.0.0",
  "info": {
    "title": "Cosmos EVM JSON-RPC API",
    "description": "Ethereum-compatible JSON-RPC API for Cosmos EVM chains",
    "version": "1.0.0",
    "contact": {
      "name": "Cosmos Documentation",
      "url": "https://docs.cosmos.network"
    }
  },
  "servers": [
    {
      "url": "https://evm-rpc.cosmos.network",
      "description": "Cosmos EVM Mainnet"
    },
    {
      "url": "https://evm-testnet-rpc.cosmos.network",
      "description": "Cosmos EVM Testnet"
    },
    {
      "url": "http://localhost:8545",
      "description": "Local Development"
    }
  ],
  "paths": {
    "/": {
      "post": {
        "summary": "eth_getBalance",
        "description": "Returns the balance of the account at the given address",
        "operationId": "eth_getBalance",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "jsonrpc": {
                    "type": "string",
                    "example": "2.0"
                  },
                  "method": {
                    "type": "string",
                    "example": "eth_getBalance"
                  },
                  "params": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "type": "string",
                          "description": "Address to check for balance"
                        },
                        {
                          "type": "string",
                          "description": "Block parameter"
                        }
                      ]
                    },
                    "example": ["0x742d35cc6600c8e8e9c94e4a9c17c2d22b14c86", "latest"]
                  },
                  "id": {
                    "type": "integer",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "jsonrpc": {
                      "type": "string",
                      "example": "2.0"
                    },
                    "result": {
                      "type": "string",
                      "description": "Balance in wei (hex)",
                      "example": "0x1b1ae4d6e2ef500000"
                    },
                    "id": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          }
        },
        "tags": ["Account Methods"]
      }
    }
  },
  "components": {
    "schemas": {
      "JsonRpcRequest": {
        "type": "object",
        "required": ["jsonrpc", "method", "id"],
        "properties": {
          "jsonrpc": {
            "type": "string",
            "enum": ["2.0"]
          },
          "method": {
            "type": "string"
          },
          "params": {
            "type": "array"
          },
          "id": {
            "oneOf": [
              {"type": "string"},
              {"type": "integer"}
            ]
          }
        }
      },
      "JsonRpcResponse": {
        "type": "object",
        "required": ["jsonrpc", "id"],
        "properties": {
          "jsonrpc": {
            "type": "string",
            "enum": ["2.0"]
          },
          "result": {},
          "error": {
            "$ref": "#/components/schemas/JsonRpcError"
          },
          "id": {
            "oneOf": [
              {"type": "string"},
              {"type": "integer"}
            ]
          }
        }
      },
      "JsonRpcError": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          },
          "data": {}
        }
      }
    }
  },
  "tags": [
    {
      "name": "Account Methods",
      "description": "Methods for querying account information"
    },
    {
      "name": "Block Methods",
      "description": "Methods for querying block information"
    },
    {
      "name": "Transaction Methods",
      "description": "Methods for sending and querying transactions"
    }
  ]
}