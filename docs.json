{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Cosmos Documentation",
  "description": "Build the future of interoperable blockchains with Cosmos",
  "theme": "palm",
  "colors": {
    "primary": "#4B47CA",
    "light": "#39A6A3",
    "dark": "#22E2A8"
  },
  "styling": {
    "icons": {
      "library": "lucide"
    }
  },
  "codeBlock": {
    "mode": "auto"
  },
  "customCss": [
    "styles/globals.css"
  ],
  "topbarLinks": [
    {
      "name": "Ecosystem",
      "url": "https://cosmos.network/ecosystem"
    },
    {
      "name": "Community",
      "url": "https://discord.gg/cosmosnetwork"
    },
    {
      "name": "GitHub",
      "url": "https://github.com/cosmos"
    },
    {
      "name": "Blog",
      "url": "https://blog.cosmos.network"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/docs/evm"
  },
  "favicon": "/assets/brand/cosmos.svg",
  "logo": {
    "light": "/assets/brand/cosmos-wordmark-dark.svg",
    "dark": "/assets/brand/cosmos-wordmark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Cosmos EVM",
        "pages": [
          "docs/evm/index",
          {
            "group": "Introduction",
            "isCollapsible": true,
            "pages": [
              "docs/evm/why-cosmos-evm",
              "docs/evm/what-is-cosmos-evm",
              "docs/evm/architecture"
            ]
          },
          {
            "group": "Developer Guides",
            "isCollapsible": true,
            "pages": [
              "docs/evm/developers/index",
              {
                "group": "Getting Started",
                "isCollapsible": true,
                "pages": [
                  "docs/evm/developers/development-environment",
                  "docs/evm/developers/local-setup"
                ]
              },
              {
                "group": "Smart Contracts",
                "isCollapsible": true,
                "pages": [
                  "docs/evm/developers/smart-contracts/index",
                  "docs/evm/developers/smart-contracts/overview"
                ]
              },
              {
                "group": "Tooling & Resources",
                "isCollapsible": true,
                "pages": [
                  "docs/evm/developers/tooling-and-resources/index",
                  "docs/evm/developers/tooling-and-resources/foundry-guide",
                  "docs/evm/developers/tooling-and-resources/hardhat-guide",
                  "docs/evm/developers/tooling-and-resources/testing-and-fuzzing",
                  "docs/evm/developers/tooling-and-resources/contract-wizard",
                  "docs/evm/developers/evm-opcode-sandbox"
                ]
              },
              {
                "group": "Precompiled Contracts",
                "isCollapsible": true,
                "pages": [
                  "docs/evm/developers/precompiles/index",
                  "docs/evm/developers/precompiles/overview",
                  "docs/evm/developers/precompiles/staking",
                  "docs/evm/developers/precompiles/distribution",
                  "docs/evm/developers/precompiles/ibc"
                ]
              },
              {
                "group": "Advanced Topics",
                "isCollapsible": true,
                "pages": [
                  "docs/evm/developers/advanced",
                  "docs/evm/developers/chain-integration",
                  "docs/evm/developers/reference",
                  "docs/evm/developers/troubleshoot"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "pages": [
          {
            "group": "Cosmos API",
            "isCollapsible": true,
            "pages": [
              "docs/api-reference/cosmos/index"
            ]
          },
          {
            "group": "EVM API",
            "isCollapsible": true,
            "pages": [
              "docs/api-reference/evm/get-balance",
              "docs/api-reference/evm/opcodes",
              "docs/api-reference/evm/evm-json-rpc"
            ]
          }
        ]
      },
      {
        "tab": "API Specs",
        "pages": ["docs/api-specs/index"]
      },
      {
        "tab": "IBC",
        "pages": ["docs/ibc/index"]
      },
      {
        "tab": "Cosmos SDK",
        "pages": ["docs/sdk/index"]
      }
    ]
  },
  "footerSocials": {
    "twitter": "https://twitter.com/cosmos",
    "github": "https://github.com/cosmos",
    "discord": "https://discord.gg/cosmosnetwork",
    "website": "https://cosmos.network"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "ai": {
    "enabled": false,
    "chatbot": false
  },
  "search": {
    "prompt": "Search Cosmos docs..."
  },
  "modeToggle": {
    "default": "light",
    "isHidden": false
  },
  "api": {
    "baseUrl": ["https://api.cosmos.network", "https://evm-api.cosmos.network"]
  },
  "anchors": [
    {
      "name": "Community",
      "icon": "discord",
      "url": "https://discord.gg/cosmosnetwork"
    },
    {
      "name": "GitHub",
      "icon": "github",
      "url": "https://github.com/cosmos"
    }
  ]
}