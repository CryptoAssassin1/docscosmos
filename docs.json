{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Cosmos Documentation",
  "description": "Build the future of interoperable blockchains with Cosmos",
  "theme": "palm",
  "colors": {
    "primary": "#2D4CC8",
    "light": "#4B47CA", 
    "dark": "#22E2A8"
  },
  "codeBlock": {
    "mode": "auto"
  },
  "customCss": [
    "styles/globals.css"
  ],
  "topbarLinks": [
    {
      "name": "GitHub",
      "url": "https://github.com/cosmos"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/docs/evm/index"
  },
  "favicon": "/assets/brand/cosmos.png",
  "logo": {
    "light": "/assets/brand/cosmos-wordmark.png",
    "dark": "/assets/brand/cosmos-wordmark-dark.png",
    "href": "https://cosmos.network"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["docs/index"]
          }
        ]
      },
      {
        "tab": "EVM",
        "groups": [
          {
            "group": "EVM Development",
            "pages": [
              "docs/evm/index",
              "docs/evm/quickstart",
              "docs/evm/integrate"
            ]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "Cosmos SDK",
            "pages": ["docs/sdk/index"]
          }
        ]
      },
      {
        "tab": "IBC",
        "groups": [
          {
            "group": "IBC Protocol",
            "pages": ["docs/ibc/index"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Cosmos API",
            "pages": [
              "docs/api-reference/cosmos/api",
              "docs/api-reference/cosmos/cli"
            ]
          },
          {
            "group": "EVM API",
            "pages": [
              "docs/api-reference/evm/evm-json-rpc",
              "docs/api-reference/evm/opcodes"
            ]
          }
        ]
      }
    ]
  },
  "footerSocials": {
    "twitter": "https://twitter.com/cosmos",
    "github": "https://github.com/cosmos",
    "discord": "https://discord.gg/cosmosnetwork",
    "website": "https://cosmos.network"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search Cosmos docs..."
  },
  "modeToggle": {
    "default": "light",
    "isHidden": false
  }
}