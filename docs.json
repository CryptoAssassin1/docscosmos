{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Cosmos Documentation",
  "description": "Build the future of interoperable blockchains with Cosmos",
  "theme": "mint",
  "colors": {
    "primary": "#0E0E0E",
    "light": "#FAFAFA",
    "dark": "#0E0E0E"
  },
  "styling": {
    "icons": {
      "library": "lucide"
    }
  },
  "codeBlock": {
    "mode": "auto"
  },
  "customCss": [
    "styles/globals.css"
  ],
  "favicon": "/assets/brand/cosmos.svg",
  "logo": {
    "light": "/assets/brand/cosmos-wordmark-dark.svg",
    "dark": "/assets/brand/cosmos-wordmark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "pages": [
          {
            "group": "Gaia EVM Devnet",
            "isCollapsible": true,
            "pages": [
              "docs/devnet/overview",
              "docs/devnet/getting-started",
              "docs/devnet/how-to-get-tokens",
              "docs/devnet/launched-contracts",
              {
                "group": "Tooling",
                "isCollapsible": true,
                "pages": [
                  "docs/devnet/tooling/overview",
                  "docs/devnet/tooling/foundry",
                  "docs/devnet/tooling/hardhat",
                  "docs/devnet/tooling/testing-and-fuzzing"
                ]
              },
              {
                "group": "Precompiles",
                "isCollapsible": true,
                "pages": [
                  "docs/devnet/precompiles/overview",
                  "docs/devnet/precompiles/bech32",
                  "docs/devnet/precompiles/callbacks",
                  "docs/devnet/precompiles/distribution",
                  "docs/devnet/precompiles/erc20",
                  "docs/devnet/precompiles/evidence",
                  "docs/devnet/precompiles/governance",
                  "docs/devnet/precompiles/ics20",
                  "docs/devnet/precompiles/p256",
                  "docs/devnet/precompiles/slashing",
                  "docs/devnet/precompiles/staking",
                  "docs/devnet/precompiles/werc20"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "Developer Guides (Coming Soon)",
        "pages": [
          "docs/guides/coming-soon"
        ]
      },
      {
        "tab": "API Reference (Coming Soon)",
        "pages": [
          "docs/api-reference/coming-soon"
        ]
      }
    ]
  },
  "footerSocials": {
    "twitter": "https://twitter.com/cosmos",
    "github": "https://github.com/cosmos",
    "discord": "https://discord.gg/cosmosnetwork",
    "website": "https://cosmos.network"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "ai": {
    "enabled": false,
    "chatbot": false
  },
  "search": {
    "prompt": "Search..."
  },
  "modeToggle": {
    "default": "system",
    "isHidden": false
  }
}
