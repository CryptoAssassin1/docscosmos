{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Cosmos Documentation",
  "description": "Build the future of interoperable blockchains with Cosmos",
  "theme": "palm",
  "colors": {
    "primary": "#4B47CA",
    "light": "#7C7CF0",
    "dark": "#2D2B8A"
  },
  "styling": {
    "icons": {
      "library": "lucide"
    }
  },
  "codeBlock": {
    "mode": "auto"
  },
  "customCss": [
    "styles/globals.css"
  ],
  "topbarLinks": [
    {
      "name": "Ecosystem",
      "url": "https://cosmos.network/ecosystem"
    },
    {
      "name": "Community",
      "url": "https://discord.gg/cosmosnetwork"
    },
    {
      "name": "GitHub",
      "url": "https://github.com/cosmos"
    },
    {
      "name": "Blog",
      "url": "https://blog.cosmos.network"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/docs/evm"
  },
  "favicon": "/assets/brand/cosmos.svg",
  "logo": {
    "light": "/assets/brand/cosmos-wordmark.svg",
    "dark": "/assets/brand/cosmos-wordmark-dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Cosmos EVM",
        "pages": [
          "docs/evm/index",
          {
            "group": "Getting Started",
            "pages": [
              "docs/evm/developers/appraise",
              "docs/evm/developers/explore",
              "docs/evm/developers/local-setup"
            ]
          },
          {
            "group": "Development",
            "pages": [
              "docs/evm/developers/development-environment",
              "docs/evm/developers/tooling-and-workflows",
              "docs/evm/developers/smart-contract-development",
              "docs/evm/developers/advanced-patterns"
            ]
          },
          {
            "group": "Integration",
            "pages": [
              "docs/evm/developers/chain-integration"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "docs/evm/developers/architecture",
              "docs/evm/developers/cosmos-comparisons",
              "docs/evm/developers/reference",
              "docs/evm/developers/troubleshoot"
            ]
          },
          {
            "group": "Precompiled Contracts",
            "pages": [
              "docs/evm/developers/precompiles/index",
              "docs/evm/developers/precompiles/staking",
              "docs/evm/developers/precompiles/bank",
              "docs/evm/developers/precompiles/ibc"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "pages": [
          {
            "group": "Cosmos API",
            "pages": [
              "docs/api-reference/cosmos/api",
              "docs/api-reference/cosmos/cli"
            ]
          },
          {
            "group": "EVM API",
            "pages": [
              "docs/api-reference/evm/evm-json-rpc",
              "docs/api-reference/evm/opcodes"
            ]
          }
        ]
      },
      {
        "tab": "IBC",
        "pages": ["docs/ibc/index"]
      },
      {
        "tab": "Cosmos SDK",
        "pages": ["docs/sdk/index"]
      }
    ]
  },
  "footerSocials": {
    "twitter": "https://twitter.com/cosmos",
    "github": "https://github.com/cosmos",
    "discord": "https://discord.gg/cosmosnetwork",
    "website": "https://cosmos.network"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search Cosmos docs..."
  },
  "modeToggle": {
    "default": "light",
    "isHidden": false
  },
  "api": {
    "baseUrl": ["https://api.cosmos.network", "https://evm-api.cosmos.network"]
  },
  "anchors": [
    {
      "name": "Community",
      "icon": "discord",
      "url": "https://discord.gg/cosmosnetwork"
    },
    {
      "name": "GitHub",
      "icon": "github",
      "url": "https://github.com/cosmos"
    }
  ]
}