{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Cosmos Documentation",
  "description": "Build the future of interoperable blockchains with Cosmos",
  "theme": "prism",
  "colors": {
    "primary": "#6366F1",
    "light": "#8B5CF6",
    "dark": "#10B981",
    "background": {
      "light": "#FAFAFA",
      "dark": "#0F172A"
    },
    "anchors": {
      "from": "#6366F1",
      "to": "#8B5CF6"
    }
  },
  "customCss": [
    "/styles/globals.css"
  ],
  "topbarLinks": [
    {
      "name": "GitHub",
      "url": "https://github.com/cosmos"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/docs/evm/index"
  },
  "favicon": "/assets/brand/cosmos.svg",
  "logo": {
    "light": "/assets/brand/cosmos-wordmark.svg",
    "dark": "/assets/brand/cosmos-wordmark-dark.svg",
    "href": "https://cosmos.network"
  },
  "tabs": [
    {
      "name": "EVM",
      "url": "evm"
    },
    {
      "name": "SDK",
      "url": "sdk"
    },
    {
      "name": "IBC",
      "url": "ibc"
    },
    {
      "name": "API Reference",
      "url": "api-reference"
    }
  ],
  "navigation": [
    {
      "group": "Getting Started",
      "pages": ["docs/index"]
    }
  ],
  "evm": [
    {
      "group": "EVM Development",
      "pages": [
        "docs/evm/index",
        "docs/evm/quickstart",
        "docs/evm/integrate"
      ]
    }
  ],
  "sdk": [
    {
      "group": "Cosmos SDK",
      "pages": ["docs/sdk/index"]
    }
  ],
  "ibc": [
    {
      "group": "IBC Protocol",
      "pages": ["docs/ibc/index"]
    }
  ],
  "api-reference": [
    {
      "group": "Cosmos API",
      "pages": [
        "docs/api-reference/cosmos/api",
        "docs/api-reference/cosmos/cli"
      ]
    },
    {
      "group": "EVM API",
      "pages": [
        "docs/api-reference/evm/evm-json-rpc",
        "docs/api-reference/evm/opcodes"
      ]
    }
  ],
  "footerSocials": {
    "twitter": "https://twitter.com/cosmos",
    "github": "https://github.com/cosmos",
    "discord": "https://discord.gg/cosmosnetwork",
    "website": "https://cosmos.network"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search Cosmos docs..."
  },
  "modeToggle": {
    "default": "light",
    "isHidden": false
  }
}